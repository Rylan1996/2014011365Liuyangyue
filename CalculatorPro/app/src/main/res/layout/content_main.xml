<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <TableLayout
        android:id="@+id/tablelayout_calculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        tools:context="exercise.android.com.calculator.MainActivity"
        tools:showIn="@layout/activity_main">

        <TextView
            android:id="@+id/text_input"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_weight="3.77"
            android:gravity="bottom|right"
            android:hint="输入计算表达式"
            android:textColor="#0000ff"
            android:textSize="@dimen/text_size" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_sin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="sin"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textColor="#CCFFFF"
                android:onClick="onClick"
                android:background="#333333"/>


            <Button
                android:id="@+id/btn_cos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="cos"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textColor="#CCFFFF"
                android:onClick="onClick"
                android:background="#333333"/>

            <Button
                android:id="@+id/btn_del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BCK"
                android:textAllCaps="false"
                android:textColor="#CCCC00"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"
                android:background="#333333"/>

            <Button
                android:id="@+id/btn_cls"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CLE"
                android:textAllCaps="false"
                android:textColor="#996699"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"
                android:background="#333333"/>

        </TableRow>

        <TableRow android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btn_tan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="tan"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textColor="#CCFFFF"
                android:onClick="onClick"
                android:background="#333333"/>

            <Button
                android:id="@+id/btn_lna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ln"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textColor="#CCFFFF"
                android:onClick="onClick"
                android:background="#333333"/>

            <Button
                android:id="@+id/btn_log"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="log"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textColor="#CCFFFF"
                android:onClick="onClick"
                android:background="#333333"/>

            <Button
                android:id="@+id/btn_sqr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="√"
                android:textColor="#CCFFFF"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"
                android:background="#333333"/>


        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_fac"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="!"
                android:textColor="#CCFFFF"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"
                android:background="#333333"/>

            <Button
                android:id="@+id/btn_pow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="^"
                android:textColor="#CCFFFF"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"
                android:background="#333333"/>

            <Button
                android:id="@+id/btn_lef"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="("
                android:textColor="#0066CC"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"
                />

            <Button
                android:id="@+id/btn_rig"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=")"
                android:textColor="#0066CC"
                android:textSize="@dimen/text_size"

                android:onClick="onClick"/>

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:textColor="#0066CC"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:textColor="#0066CC"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:textColor="#0066CC"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn_div"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:textColor="#0066CC"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_poi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="@dimen/text_size"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/btn_equ"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:textColor="#333300"
                android:textSize="@dimen/text_size"
                android:onClick="onEquClick"/>

        </TableRow>



    </TableLayout>
</LinearLayout>